<configuration>
        {% for intf in lacp_int_name -%}
        <interfaces>
            <interface operation="replace">
                    <name>{{ intf }}</name>
                    {% if node_type == 'vQFX-switch' -%}
                    <gigether-options>
                        <ieee-802.3ad>
                            <bundle>ae0</bundle>
                        </ieee-802.3ad>
                    </gigether-options>
                    {%- elif node_type == 'EX-switch' -%}
                    <ether-options>
                        <ieee-802.3ad>
                            <bundle>ae0</bundle>
                        </ieee-802.3ad>
                    </ether-options>
                    {% endif %}
            </interface>
        </interfaces>
        {% endfor %}
</configuration>